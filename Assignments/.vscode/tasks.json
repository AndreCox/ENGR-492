{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build & Run Debug",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "mkdir -p ${workspaceFolder}/build/debug && g++ -g ${workspaceFolder}/src/*.cpp -o ${workspaceFolder}/build/debug/main -lsfml-graphics -lsfml-window -lsfml-system && ${workspaceFolder}/build/debug/main"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "label": "Build & Run Release",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "mkdir -p ${workspaceFolder}/build/release && g++ -O3 ${workspaceFolder}/src/*.cpp -o ${workspaceFolder}/build/release/main -lsfml-graphics -lsfml-window -lsfml-system && ${workspaceFolder}/build/release/main"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: gcc build active file",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}
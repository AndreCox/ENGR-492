{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug CMake Project",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/debug/main",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        },
        {
          "description": "Set Disassembly Flavor to Intel",
          "text": "-gdb-set disassembly-flavor intel",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "Build Debug",
      "miDebuggerPath": "/usr/bin/gdb",
      "logging": {
        "engineLogging": false,
        "moduleLoad": false,
        "programOutput": true,
        "trace": false
      },
      "sourceFileMap": {},
      "additionalSOLibSearchPath": ""
    },
    // add a quick version that doesn't run cmake first with "preLaunchTask": ""
